{
    "info": {
        "name": "Hypertext Onto Backend",
        "description": "API collection for hypertext-onto-backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Ontology",
            "item": [
                {
                    "name": "GET - Demo Ontology",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology",
                        "description": "Get demo ontology data"
                    }
                },
                {
                    "name": "GET - Find Node by Word",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology/node/machine%20learning",
                        "description": "Find a node in demo data by word"
                    }
                },
                {
                    "name": "GET - All Topics from DB",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology/topics",
                        "description": "Get all topics from database as graph (nodes + links)"
                    }
                },
                {
                    "name": "GET - World Tree (with Users)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology/world",
                        "description": "Get world tree graph with user details embedded in nodes"
                    }
                },
                {
                    "name": "GET - Topics by User",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology/topics/user/1",
                        "description": "Get topics for a specific user"
                    }
                },
                {
                    "name": "GET - Topics by User (Private)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology/topics/user/1/private",
                        "description": "Get topics for a specific user with privacy coloring (user's color for exclusive, complementary for shared)"
                    }
                },
                {
                    "name": "GET - Topic by Name",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/ontology/topic/machine%20learning",
                        "description": "Get topic details by name"
                    }
                },
                {
                    "name": "POST - Create/Update Topic",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ontology/topic",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": 1,\n  \"name\": \"artificial intelligence\",\n  \"description\": \"The simulation of human intelligence in machines\"\n}"
                        },
                        "description": "Create or update a topic (increments frequency, calls hypertext_backend)"
                    }
                },
                {
                    "name": "POST - Hypertext Click",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ontology/click",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": 1,\n  \"clickedWord\": \"neural networks\",\n  \"parentTopicId\": \"optional-parent-topic-id\"\n}"
                        },
                        "description": "Handle hypertext click - forwards to hypertext_backend for LLM processing"
                    }
                },
                {
                    "name": "POST - Sync from Hypertext Backend",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ontology/sync",
                        "description": "Sync topics from hypertext_backend to local DB"
                    }
                },
                {
                    "name": "POST - Add User to Topic",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ontology/topic/assign-user",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": 1,\n  \"topicName\": \"artificial intelligence\"\n}"
                        },
                        "description": "Add user to an existing topic"
                    }
                },
                {
                    "name": "POST - Get Topic ID",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ontology/topic/id",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"artificial intelligence\"\n}"
                        },
                        "description": "Get topic ID by name"
                    }
                }
            ]
        },
        {
            "name": "Hyperlink",
            "item": [
                {
                    "name": "GET - All Keys",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/hyperlink",
                        "description": "Get all hyperlink keys"
                    }
                },
                {
                    "name": "GET - Content by Word",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/hyperlink/example",
                        "description": "Get hyperlink content for a specific word"
                    }
                }
            ]
        }
    ]
}